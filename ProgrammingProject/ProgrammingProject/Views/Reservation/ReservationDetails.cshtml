@model ProgrammingProject.Models.Reservation.ReservationDetails

@{
    ViewData["Title"] = "Make A Reservation";
}

<div class="m-4 row">
    <div class="col-md-8 m-3 p-4 w-50" style="display: inline-block; background-color: rgba(0,0,0, 0.95); border-radius: 15px;   color: #f1f1f1; ">
        <form asp-action="IsLoggedIn" asp-area="" asp-controller="Reservation" asp-route-sittingid="@Model.SittingId">
            <div class="row m-3">
                <h2>@ViewData["Title"]</h2>
                <div class="col-md-4 w-50">
                    <div class="form-group m-0">
                        <label asp-for="Guests"></label><span asp-validation-for="Guests" class="text-danger"> *</span>
                        <input type="number" asp-for="Guests" class="form-control" />
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Notes"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" value="Save" class="btn btn-primary mt-3">Find A Table</button>
                </div>
                <div class="w-50 m-0 p-0">
                    <div class="form-group">
                        <label asp-for="Start"></label>
                        <input asp-for="Start" type="text" class="form-control" id="datetimepicker3" />
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="fa-lg" />
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{

    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/moment.js/moment.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>


    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/font-awesome/js/fontawesome.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker3').datetimepicker({
                format: "DD/MM/yyyy hh:mm a",
                inline: true,
                keepOpen: true,
                debug: true,
                locale: "en-au",
                stepping: 15,

                icons: {
                    time: "fa fa-clock-o",
                    up: "fa fa-chevron-up",
                    down: "fa fa-chevron-down"
                }

            });
        });
    </script>
}
